{
  "printWidth": 100,
  "useTabs": false,
  "overrides": [
    {
      "files": "*.toml",
      "options": {
        "plugins": ["prettier-plugin-toml"],
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "files": ["*.js", "*.ts", "*.md"],
      "options": {
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "trailingComma": "es5"
      }
    }
  ]
}
